extends template/main

block params
  - var title = 'Трансфер (такси) по крыму'
  - var pageClass = 'transfer-page'

block content
  include ./modules/navigation/breadcrumb
  .container.catalog-list.mb-5
    h1.h1 Трансфер (такси) по крыму

    .text-content.white-block.my-4.transfer
      .row
        .col-12
          .h2 Такси по крыму - Цены

        .col-12
          table.table.table-hover.table-sm.no-more-tables
            thead.thead-dark.thead-orange
              tr
                th(scope='col') #
                th(scope='col') Тариф
                th(scope='col') Маршрут
                th(scope='col') Кол-во мест
                th(scope='col') Стоимость
            tbody
              tr
                th(scope='row') 1
                td(data-title="Тариф") Стандарт
                td(data-title="Маршрут") Аэропорт-Ялта (в любом направлении)
                td(data-title="Кол-во мест") до 4-х мест
                td(data-title="Стоимость") 2 000
                  span.rubl.pl-1 q
              tr
                th(scope='row') 2
                td(data-title="Тариф") Комфорт
                td(data-title="Маршрут") Аэропорт-Ялта (в любом направлении)
                td(data-title="Кол-во мест") до 4-х мест
                td(data-title="Стоимость") 2 000
                  span.rubl.pl-1 q
              tr
                th(scope='row') 3
